<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_create_user"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_create_user"
                    android:inputType="text"
                    android:padding="10dp"
                    android:layout_below="@id/nameEditText"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_create_user"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:layout_below="@id/usernameEditText"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_create_user"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:layout_below="@id/emailEditText"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/selectProfileImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_profile_image_create_user"
                    android:padding="10dp"
                    android:layout_below="@id/passwordEditText"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/selectProfileImageButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/profile_image_create_user"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"/>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_create_user"
                    android:padding="10dp"
                    android:layout_below="@id/profileImageView"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>
