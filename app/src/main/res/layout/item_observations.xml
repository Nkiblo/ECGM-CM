<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewObservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageViewObservation"
        android:text="@string/observation"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textViewObservationDescription"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_below="@id/textViewObservations"
        android:layout_alignBottom="@+id/imageViewObservation"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/observation_description"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewObservation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop" />

</RelativeLayout>
