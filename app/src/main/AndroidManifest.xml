<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECGM.NoActionBar"
        tools:targetApi="31">


        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.ECGM.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.ECGM.NoActionBar"
            android:exported="true">
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ECGM.NoActionBar">

        </activity>

        <activity android:name=".ProfileActivity"/>
        <activity android:name=".CreateProjectActivity" />
        <activity android:name=".UserSelectionActivity" />

        <activity
            android:name=".ProjectActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity android:name=".EditProjectActivity"/>
        <activity android:name=".UserEditSelectionActivity"/>
        <activity android:name=".EditUserActivity"/>
        <activity android:name=".CreateUserActivity"/>
        <activity android:name=".CreateTasksActivity"/>
        <activity android:name=".TaskActivity"/>
        <activity android:name=".EditTaskActivity"/>
        <activity android:name=".AssignedTasksActivity"/>
        <activity android:name=".ViewFinishedTasksActivity"/>
        <activity android:name=".FinishedTaskActivity"/>
        <activity android:name=".FinishedProjectActivity"/>
        <activity android:name=".ContinueTaskActivity"/>
        <activity android:name=".UserFinishedTaskActivity"/>
        <activity android:name=".ClosedTaskActivity"/>


    </application>

</manifest>

